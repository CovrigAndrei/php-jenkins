{
    "name": "vendor/simple-php-project",
    "description": "A simple PHP project with unit tests for Jenkins CI/CD",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "php tests/run-all-tests.php"
    }
}